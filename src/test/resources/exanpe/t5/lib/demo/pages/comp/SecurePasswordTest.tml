<t:layout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter"
	xmlns:ex="tapestry-library:exanpe">
  	
  <t:form>	
  	
  	Secure Password on click, value persisting :<br/>
  	<ex:securePassword t:id="spwd" value="spwd"/>
    
    <br/><br/><br/><br/>
    
    Secure Password on hover + maxlength :<br/>
  	<ex:securePassword t:id="spwd2" maxlength="6" eventType="hover" value="spwd2"/>
    
    <br/><br/><br/><br/>
    
    Secure Password with other icon :<br/>
  	<ex:securePassword t:id="spwd3" resetImage="context:/img/spwd/reset.png" value="spwd3"/>
    
    <br/><br/><br/><br/>
    
      <t:submit/>
    
  </t:form>  
    
</t:layout>