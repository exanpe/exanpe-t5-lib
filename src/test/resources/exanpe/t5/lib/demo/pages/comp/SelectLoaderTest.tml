<t:layout xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" xmlns:p="tapestry:parameter"
	xmlns:ex="tapestry-library:exanpe">
  
  <t:form>
  	<t:select t:mixins="exanpe/selectLoader" t:targetId="city" t:id="country" model="country" value="countryValue" encoder="countryEncoder"/>
  	
  	<t:select t:id="city" model="city" value="cityValue"/>
  </t:form>
  
  <script type="text/javascript">
		YAHOO.util.Event.onDOMReady(function(){
			country.afterUpdateSuccess = function(){
				YAHOO.util.Dom.get("info").innerHTML = "afterUpdateSuccess"+Math.random()*100;
			}
		});
	</script>
	
	<div id="info">
	</div>
  
</t:layout>